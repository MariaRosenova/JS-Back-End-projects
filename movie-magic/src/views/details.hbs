         <section id="details-page">
              {{#with movie}}
                <div class="main_card">
                    <div class="card_left">
                        <div class="card_datails">
                            <h1>{{title}}</h1>
                            <div class="card-movie">
                                <div class="first-info">
                                    <p class="card-genre">{{genre}}</p>
                                    <p class="card-director">{{director}}</p>
                                </div>
                                <div class="second-info">
                                    <p class="card-year">{{date}}</p>
                                    <p class="card-ranking">Rating: {{#each rating}} &#x2605; {{/each}}</p>
                                </div>

                            </div>

                            <p class="disc">{{description}}</p>
                        </div>
                    </div>
                    <div class="card_right">
                        <img src="{{imageUrl}}"
                            alt="image">
                    </div>
                    {{/with}}
                </div>
            </section>
