
        <section class="search">
            <h1>Search</h1>

            <form class="search-form" action="" method="GET">
            <input type="text" class="search-name" name="searchName" placeholder="Search Name..." value="{{searchName}}">
                <input type="text" class="search-type" name="searchType" placeholder="Search Type..." value="{{searchType}}">
                <button type="submit" class="btn-search">Search</button>
            </form>
            
             {{#each electronics}}
            <!--If there are matches after search-->
            <div class="search-result">
                <div class="search-list">    
                    <a href="" class="added-electronics-in-market">
                        <img src="{{image}}" class="picture-added-electronics">
                        <h3>{{name}}</h3>
                        <span>Price: ${{price}}</span>
                    </a>
                </div>

            </div>
            {{else}}
            <!--If there are no matches-->
             <div class="no-match">
                <p>No match was found!</p>
            </div> 
            {{/each}}
        </section>
